generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Room {
  id            String          @id @default(cuid())
  name          String
  description   String          @db.Text
  image         String
  price         Int
  capacity      Int             @default(1)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  // menerima relasi dari model RoomAmenities
  RoomAmenities RoomAmenities[]
  // menerima relasi dari model Reservation
  Reservation   Reservation[]
}

model Amenities {
  id            String          @id @default(cuid())
  name          String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  // menerima relasi dari model RoomAmenities
  RoomAmenities RoomAmenities[]
}

model RoomAmenities {
  id          String    @id @default(cuid())
  roomId      String
  // berrelasi ke model Room
  Room        Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  amenitiesId String
  // berrelasi ke model Amenities
  Amenities   Amenities @relation(fields: [amenitiesId], references: [id], onDelete: Cascade)
}

model Reservation {
  id        String   @id @default(cuid())
  starDate  DateTime
  endDate   DateTime
  price     Int
  userId    String //fk
  // berrelasi ke model user
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roomId    String
  // berrelasi ke model user
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // menerima relasi dari model Payment
  Payment   Payment?
}

model Payment {
  id            String      @id @default(cuid())
  method        String?
  amount        Int
  status        String      @default("unpaid")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  // ini adalah fk karena relasinya 1 TO 1 maka tambahkan @unique
  reservationId String      @unique
  // berrelasi ke model Reservation
  Reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
}

// MODEL 
// Kita hanya menggunakan model usser dan account dikarenakan session sudah kita gunakan dengan jwt, dan authenticator tidak kita gunakan.
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user")
  phone         String?
  accounts      Account[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  // menerima relasi dari model Reservation
  Reservation Reservation[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}
